{
  "name": "@gebby/core",
  "version": "0.0.1",
  "description": "Core Game Boy Emulator",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "ts": "tsc -p tsconfig.json",
    "lint": "eslint --fix './src/**/*.ts'",
    "lint:check": "eslint './src/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageDirectory ./reports",
    "clean": "rimraf ./dist/**",
    "compile": "babel src --out-dir ./dist/ --source-maps --extensions '.ts'",
    "compile:defs": "tsc -p tsconfig.json",
    "build": "concurrently \"yarn ts\" \"yarn lint:check\" \"yarn test\" && yarn clean && yarn compile && yarn compile:defs"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "concurrently": "^4.1.0",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^24.4.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "setupFilesAfterEnv": [
      "./src/test/setUp.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/test/"
    ]
  },
  "dependencies": {
    "lodash": "^4.17.11"
  }
}
