{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "alwaysStrict": true,
    "downlevelIteration": true
  },
  "exclude": [
    "**/__tests__/**/*",
    "src/test/**/*",
    "dist"
  ]
}